{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "build/*"]
    },
    "outDir": "build",
    "allowJs": false,
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["build"]
}